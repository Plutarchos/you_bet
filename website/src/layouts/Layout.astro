---
import oddsData from '../data/odds.json';

interface Props {
  title: string;
}

const { title } = Astro.props;
const lastUpdated = new Date(oddsData.generated_at).toLocaleString('en-GB', {
  day: 'numeric',
  month: 'short',
  year: 'numeric',
  hour: '2-digit',
  minute: '2-digit',
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/you_bet/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div class="header-content">
        <div class="header-left">
          <h1>You Bet - Football Odds Tracker</h1>
          <nav>
            <a href="/you_bet/results/">Results</a>
            <a href="/you_bet/">Upcoming Matches</a>
          </nav>
        </div>
        <div class="last-updated">
          Last updated<br/>
          <strong>{lastUpdated}</strong>
        </div>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>Data from The Odds API | UK Bookmakers & Exchanges</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --bg-color: #1a1a2e;
    --card-bg: #16213e;
    --accent: #0f3460;
    --highlight: #e94560;
    --text: #eaeaea;
    --text-dim: #a0a0a0;
    --green: #4ade80;
    --yellow: #facc15;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background-color: var(--bg-color);
    color: var(--text);
    line-height: 1.6;
    min-height: 100vh;
  }

  header {
    background: var(--card-bg);
    padding: 1rem 2rem;
    border-bottom: 2px solid var(--accent);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
    gap: 1rem;
  }

  .header-left {
    flex: 1;
  }

  header h1 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  nav {
    display: flex;
    gap: 1rem;
  }

  .last-updated {
    text-align: right;
    font-size: 0.75rem;
    color: var(--text-dim);
    background: var(--accent);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    white-space: nowrap;
  }

  .last-updated strong {
    color: var(--green);
    font-size: 0.875rem;
  }

  nav a {
    color: var(--text-dim);
    text-decoration: none;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    transition: all 0.2s;
  }

  nav a:hover {
    color: var(--text);
    background: var(--accent);
  }

  main {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  footer {
    text-align: center;
    padding: 2rem;
    color: var(--text-dim);
    font-size: 0.875rem;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.875rem;
  }

  th, td {
    padding: 0.75rem 0.5rem;
    text-align: left;
    border-bottom: 1px solid var(--accent);
  }

  th {
    background: var(--accent);
    font-weight: 600;
    position: sticky;
    top: 0;
  }

  tr:hover {
    background: rgba(15, 52, 96, 0.5);
  }

  .match-card {
    background: var(--card-bg);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    border: 1px solid var(--accent);
  }

  .match-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .match-teams {
    font-size: 1.25rem;
    font-weight: 600;
  }

  .match-meta {
    color: var(--text-dim);
    font-size: 0.875rem;
  }

  .best-odds {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .best-odds .odds-box {
    background: var(--accent);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-align: center;
  }

  .best-odds .odds-box .label {
    font-size: 0.75rem;
    color: var(--text-dim);
  }

  .best-odds .odds-box .value {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--green);
  }

  .odds-table-container {
    overflow-x: auto;
  }

  .odds-value {
    font-family: monospace;
  }

  .best {
    color: var(--green);
    font-weight: 700;
  }

  .outcome-home { color: var(--green); }
  .outcome-draw { color: var(--yellow); }
  .outcome-away { color: var(--highlight); }

  .score {
    font-weight: 700;
    font-size: 1.1rem;
  }

  .filter-bar {
    margin-bottom: 1.5rem;
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .filter-bar select {
    background: var(--card-bg);
    color: var(--text);
    border: 1px solid var(--accent);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }

    .match-teams {
      font-size: 1rem;
    }

    th, td {
      padding: 0.5rem 0.25rem;
      font-size: 0.75rem;
    }
  }
</style>
