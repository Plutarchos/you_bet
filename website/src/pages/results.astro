---
import Layout from '../layouts/Layout.astro';
import oddsData from '../data/odds.json';

const results = oddsData.results;

// Group results by league
const resultsByLeague = results.reduce((acc, result) => {
  if (!acc[result.league]) {
    acc[result.league] = [];
  }
  acc[result.league].push(result);
  return acc;
}, {} as Record<string, typeof results>);

const leagues = Object.keys(resultsByLeague).sort();
---

<Layout title="You Bet - Match Results">
  <h2>Recent Results</h2>

  {results.length === 0 ? (
    <p>No results yet. Check back after some matches have been played.</p>
  ) : (
    <>
      <div class="filter-bar">
        <select id="league-filter">
          <option value="">All Leagues</option>
          {leagues.map(league => (
            <option value={league}>{league}</option>
          ))}
        </select>
      </div>

      {results.map(result => {
        const kickoff = new Date(result.commence_time);
        const kickoffStr = kickoff.toLocaleString('en-GB', {
          weekday: 'short',
          day: 'numeric',
          month: 'short',
          hour: '2-digit',
          minute: '2-digit'
        });

        const outcomeLabel = result.outcome === 'home' ? 'Home Win' :
                             result.outcome === 'away' ? 'Away Win' : 'Draw';

        return (
          <div class="match-card" data-league={result.league}>
            <div class="match-header">
              <div class="match-teams">
                {result.home_team} <span class="score">{result.home_score} - {result.away_score}</span> {result.away_team}
              </div>
              <div class="match-meta">
                {result.league} | {kickoffStr}
              </div>
            </div>

            <div class="result-outcome">
              <span class={`outcome-badge outcome-${result.outcome}`}>{outcomeLabel}</span>
            </div>

            <div class="probability-grid">
              <div class:list={["prob-box", { winner: result.outcome === 'home' }]}>
                <div class="prob-header">Home</div>
                <div class="prob-median">{result.probability?.home ? (result.probability.home.median * 100).toFixed(1) + '%' : '-'}</div>
                <div class="prob-details">
                  <span class="best-odds">{result.probability?.home?.best_odds?.toFixed(2) || '-'}</span>
                  <span class="bookmaker">{result.probability?.home?.best_bookmaker || ''}</span>
                </div>
                <div class="value-diff">
                  +{result.probability?.home ? (result.probability.home.diff_from_median * 100).toFixed(1) : '0'}%
                </div>
              </div>
              <div class:list={["prob-box", { winner: result.outcome === 'draw' }]}>
                <div class="prob-header">Draw</div>
                <div class="prob-median">{result.probability?.draw ? (result.probability.draw.median * 100).toFixed(1) + '%' : '-'}</div>
                <div class="prob-details">
                  <span class="best-odds">{result.probability?.draw?.best_odds?.toFixed(2) || '-'}</span>
                  <span class="bookmaker">{result.probability?.draw?.best_bookmaker || ''}</span>
                </div>
                <div class="value-diff">
                  +{result.probability?.draw ? (result.probability.draw.diff_from_median * 100).toFixed(1) : '0'}%
                </div>
              </div>
              <div class:list={["prob-box", { winner: result.outcome === 'away' }]}>
                <div class="prob-header">Away</div>
                <div class="prob-median">{result.probability?.away ? (result.probability.away.median * 100).toFixed(1) + '%' : '-'}</div>
                <div class="prob-details">
                  <span class="best-odds">{result.probability?.away?.best_odds?.toFixed(2) || '-'}</span>
                  <span class="bookmaker">{result.probability?.away?.best_bookmaker || ''}</span>
                </div>
                <div class="value-diff">
                  +{result.probability?.away ? (result.probability.away.diff_from_median * 100).toFixed(1) : '0'}%
                </div>
              </div>
            </div>

            {result.odds && result.odds.length > 0 && (
              <details>
                <summary>View all {result.odds.length} bookmakers</summary>
                <div class="odds-table-container">
                  <table>
                    <thead>
                      <tr>
                        <th>Bookmaker</th>
                        <th class:list={[{ 'winner-col': result.outcome === 'home' }]}>Home</th>
                        <th class:list={[{ 'winner-col': result.outcome === 'draw' }]}>Draw</th>
                        <th class:list={[{ 'winner-col': result.outcome === 'away' }]}>Away</th>
                      </tr>
                    </thead>
                    <tbody>
                      {result.odds.map(o => (
                        <tr>
                          <td>{o.bookmaker}</td>
                          <td class:list={["odds-value", { best: o.home === result.probability?.home?.best_odds, 'winner-col': result.outcome === 'home' }]}>
                            {o.home?.toFixed(2) || '-'}
                          </td>
                          <td class:list={["odds-value", { best: o.draw === result.probability?.draw?.best_odds, 'winner-col': result.outcome === 'draw' }]}>
                            {o.draw?.toFixed(2) || '-'}
                          </td>
                          <td class:list={["odds-value", { best: o.away === result.probability?.away?.best_odds, 'winner-col': result.outcome === 'away' }]}>
                            {o.away?.toFixed(2) || '-'}
                          </td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>
              </details>
            )}
          </div>
        );
      })}
    </>
  )}
</Layout>

<style>
  h2 {
    margin-bottom: 1.5rem;
  }

  .result-outcome {
    margin-bottom: 1rem;
  }

  .outcome-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .outcome-badge.outcome-home {
    background: rgba(74, 222, 128, 0.2);
    color: var(--green);
  }

  .outcome-badge.outcome-draw {
    background: rgba(250, 204, 21, 0.2);
    color: var(--yellow);
  }

  .outcome-badge.outcome-away {
    background: rgba(233, 69, 96, 0.2);
    color: var(--highlight);
  }

  .probability-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .prob-box {
    background: var(--accent);
    padding: 0.75rem;
    border-radius: 6px;
    text-align: center;
    border: 2px solid transparent;
  }

  .prob-box.winner {
    border-color: var(--green);
    background: rgba(74, 222, 128, 0.1);
  }

  .prob-header {
    font-size: 0.75rem;
    color: var(--text-dim);
    text-transform: uppercase;
    margin-bottom: 0.25rem;
  }

  .prob-median {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text);
  }

  .prob-box.winner .prob-median {
    color: var(--green);
  }

  .prob-details {
    font-size: 0.75rem;
    margin-top: 0.25rem;
  }

  .prob-details .best-odds {
    color: var(--green);
    font-weight: 600;
    margin-right: 0.5rem;
  }

  .prob-details .bookmaker {
    color: var(--text-dim);
  }

  .value-diff {
    font-size: 0.75rem;
    color: var(--text-dim);
    margin-top: 0.25rem;
  }

  .winner-col {
    background: rgba(74, 222, 128, 0.1);
  }

  details {
    margin-top: 1rem;
  }

  summary {
    cursor: pointer;
    color: var(--text-dim);
    font-size: 0.875rem;
  }

  summary:hover {
    color: var(--text);
  }

  details[open] summary {
    margin-bottom: 0.5rem;
  }

  @media (max-width: 480px) {
    .probability-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const filter = document.getElementById('league-filter') as HTMLSelectElement;
  const cards = document.querySelectorAll('.match-card');

  filter?.addEventListener('change', () => {
    const selected = filter.value;
    cards.forEach(card => {
      const league = card.getAttribute('data-league');
      if (!selected || league === selected) {
        (card as HTMLElement).style.display = 'block';
      } else {
        (card as HTMLElement).style.display = 'none';
      }
    });
  });
</script>
